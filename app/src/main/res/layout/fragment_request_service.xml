<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    >

    <TextView
        android:id="@+id/text_request_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اطلب خدمتك"
        android:padding="15dp"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:elevation="5dp"
        android:background="@color/colorPrimary"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/text_request_service">

        <EditText
            android:id="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:padding="12dp"
            android:hint="الاسم" />

    <EditText
        android:id="@+id/phone"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:inputType="phone"
        android:background="@drawable/background"
        android:hint="رقم الهاتف"
        android:textAlignment="viewStart"/>


    <EditText
        android:id="@+id/service"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:padding="12dp"
        android:layout_weight="1"
        android:hint="تفاصيل الخدمة المطلوبة"
        android:textAlignment="viewStart"
        android:gravity="start"/>
    <Button
        android:layout_margin="10dp"
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إرسال الطلب"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:padding="12dp"
        android:background="@drawable/service_card"/>
    </LinearLayout>
</RelativeLayout>
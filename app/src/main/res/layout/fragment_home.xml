<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    >

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الرئيسية"
        android:padding="15dp"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:elevation="5dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_home"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/home_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_logo"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="مجموعة خبراء ومستشارين في مجال\nالاستشارات المالية \nالزكاة \nضريبة القيمة المضافة\n ضريبة السلع الانتقائية "
         android:textSize="18sp"
        />
    <TextView
        android:id="@+id/request_home_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        android:text="اطلب استشارتك مجاناً"
        android:textColor="#FF4B04"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</RelativeLayout>